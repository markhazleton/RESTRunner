@using WebSpark.Bootswatch.Services
@using WebSpark.Bootswatch.Helpers
@inject StyleCache StyleCache
<!DOCTYPE html>
<html lang="en" data-bs-theme="@(BootswatchThemeHelper.GetCurrentColorMode(Context))">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RESTRunner</title>
    @{
        var themeName = BootswatchThemeHelper.GetCurrentThemeName(Context);
        var themeUrl = BootswatchThemeHelper.GetThemeUrl(StyleCache, themeName);
    }
    <link id="bootswatch-theme-stylesheet" rel="stylesheet" href="@themeUrl" />
    <script src="/_content/WebSpark.Bootswatch/js/bootswatch-theme-switcher.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">RESTRunner</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="restrunnerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                RESTRunner
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="restrunnerDropdown">
                                <li><a class="dropdown-item" href="/Runner">Dashboard</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Configuration">Configurations</a></li>
                                <li><a class="dropdown-item" href="/Collection">Collections</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Runner/QuickStart">Quick Start</a></li>
                                <li><a class="dropdown-item" href="/Runner/Settings">Settings</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/docs">API Docs</a>
                        </li>
                    </ul>
                    @Html.Raw(BootswatchThemeHelper.GetThemeSwitcherHtml(StyleCache, Context))
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="container mt-3">
        @RenderBody()
    </main>
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">&copy; 2025 RESTRunner</span>
        </div>
    </footer>
    <script src="~/dist/jquery/dist/jquery.min.js"></script>
    <script src="~/dist/bootstrap/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
